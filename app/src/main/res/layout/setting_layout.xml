<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    
    xmlns:dwb="http://schemas.android.com/apk/res/com.example.mobilesafer"
    
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        style="@style/TitleStyle"
        android:text="设置中心" />

    <com.example.mobilesafer.view.SettingItemView
        android:id="@+id/siv_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        dwb:title="自动更新设置"
        dwb:desc_off="自动更新已关闭"
        dwb:desc_on="自动更新已开启"
        />
    
    <com.example.mobilesafer.view.SettingItemView
        android:id="@+id/siv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        dwb:title="电话归属地显示设置"
        dwb:desc_off="归属地显示已经关闭"
        dwb:desc_on="归属地显示已经开启"
        />
    
    <com.example.mobilesafer.view.SettingClickView
        android:id="@+id/scv_address"
        dwb:title="归属地提示框风格"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        />
    
    <com.example.mobilesafer.view.SettingClickView
        android:id="@+id/scv_addresslocation"
        dwb:title="归属地提示框显示位置"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        />
    
    <com.example.mobilesafer.view.SettingItemView
        android:id="@+id/siv_callsafe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        dwb:title="黑名单拦截设置"
        dwb:desc_off="黑名单拦截已经关闭"
        dwb:desc_on="黑名单拦截已经开启"
        />
    
     <com.example.mobilesafer.view.SettingItemView
        android:id="@+id/siv_watch_dog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        dwb:title="看门狗设置"
        dwb:desc_off="看门狗已经关闭"
        dwb:desc_on="看门狗已经开启"
        />

</LinearLayout>